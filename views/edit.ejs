<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/styleEdit.css">
    <title>Projeto 4</title>
</head>
<body>

    <%- include('./components/header') %>

    <main>

        <% if(message != ""){ %>
            <section id="mensagem">
              <p><%= message%></p>
              <span id="close">&times;</span>
            </section>
         <% } %>

        <h2>Edite as Informações</h2>

        <section id="container">
        <form action="/edit/<%= artist.id %>" method="POST">
            <div class="item">
            <label for="name">Nome</label>
            <input type="text" id="name" name="name" value="<%= artist.name %>">
            </div>

            <div class="item">
            <label for="img">Imagem</label>
            <input type="text" id="img" name="img" value="<%= artist.img %>" >
            </div>

            <div class="item">
            <label for="type">Gênero Musical</label>
            <input type="text" id="type" name="type" value="<%= artist.type %>" >
            </div>

            <div class="item">
            <label for="description">Apresentação</label>
            <textarea name="description"><%= artist.description %></textarea>  
            </div>

            <div class="item">
            <label for="playlist">Playlist</label>
            <input type="text" id="playlist" name="playlist" value="<%= artist.playlist %>" >
            </div>

            <div class="item">
            <label for="last_release">Último Lançamento</label>
            <input type="text" id="last_release" name="last_release" value="<%= artist.last_release %>">
            </div>

            <div class="item">
            <label for="link_last_release">Link do Último Lançamento</label>
            <input type="text" id="link_last_release" name="link_last_release" value="<%= artist.link_last_release %>" >
            </div>

            <div class="item">
            <button id="btnAtualizar" type="submit">Atualizar</button>
            </div>
        </form> 
        </section>

    </main>
    <script src="/js/script.js"></script>
</body>
</html>